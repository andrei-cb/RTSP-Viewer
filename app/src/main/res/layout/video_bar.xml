<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/llVideoCtrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/overlay_background"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/btnPrevFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_background"
                    android:contentDescription="@string/file_prev"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_keyboard_double_arrow_left_24" />

                <ImageButton
                    android:id="@+id/btnSeekBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_background"
                    android:contentDescription="@string/seek_back"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

                <ImageButton
                    android:id="@+id/btnPlay"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/ic_baseline_pause_24"
                    android:contentDescription="@string/play_pause"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="44dp"
                    android:layout_height="42dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/btnNextFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent_background"
                    android:contentDescription="@string/file_next"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvChannel"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/overlay_background"
            android:foreground="?android:attr/selectableItemBackground"
            android:textSize="20sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnMute" />

        <ImageButton
            android:id="@+id/btnMute"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:background="@color/overlay_background"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_volume_up_24"
            android:visibility="gone"
            android:contentDescription="@string/mute"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
